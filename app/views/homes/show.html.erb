<!-- /homes/:id  Manage Inventory Page -->
<div class="inventory container">
  <% @items.sort.each do |item| %>
    <div class="item well row">
      <div class="description span2">
        <div class="name"><%= item.name %></div>
        <div class="photo"><%= image_tag item.main_photo.photo.url(:small) %></div>
        <div class="price"><%= item.price == 0 ? "Free" : "$" + item.price * 1.00 %></div>
      </div>
      <ul class="request span4" id="<%= item.id %>"></ul>
    </div>
  <% end %>
</div>

<%= link_to "Create a new Item", new_item_url %>

<%= render partial: "homes/form" %>
<br>
